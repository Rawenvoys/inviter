@page "/Galeria"
@layout InviterLayout

<PageTitle>Galeria zdjęć</PageTitle>

<MudGrid Spacing="5">
    @foreach (var image in @images)
    {
        <MudItem xs="12" sm="6" lg="3" Style="text-align: center;">
            <MudImage @onclick="() => SelectImage(image.Id)" Src="@image.Path"
                  ObjectPosition="ObjectPosition.Center"
                  Class="rounded-lg"
                  ObjectFit="ObjectFit.Fill">
            </MudImage>
        </MudItem>
    }
</MudGrid>